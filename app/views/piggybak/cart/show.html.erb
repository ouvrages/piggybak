<div id="cart">

<h1>Shopping Cart</h1>
<% if @cart.errors.any? -%>
<div id="cart_error">
<%= raw @cart.errors.full_messages.join('<br />') %>
</div>
<% end -%>

<%= render "items", :page => "cart" %>

<% if @cart.items.any? -%>
<%= link_to "Proceed to Checkout", piggybak.orders_url, :id => "checkout" %>
<% end -%>
</div>
